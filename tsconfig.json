{
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ]
}
